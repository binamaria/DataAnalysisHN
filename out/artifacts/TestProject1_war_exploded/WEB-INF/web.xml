<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>Servlet.SampleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JobPostingServlet</servlet-name>
        <servlet-class>Servlet.JobListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobPostingServlet</servlet-name>
        <url-pattern>/jobPosting</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProgrammingJobServlet</servlet-name>
        <servlet-class>Servlet.CommonProgramJobServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProgrammingJobServlet</servlet-name>
        <url-pattern>/proJobs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loadMapServlet</servlet-name>
        <servlet-class>Servlet.LoadMapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loadMapServlet</servlet-name>
        <url-pattern>/loadMap</url-pattern>
    </servlet-mapping>


</web-app>